<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartFragment.StartInfoFragment4">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="30sp"
        >

        <ImageView
            android:id="@+id/imvst4"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:src="@drawable/st4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt4P1"
            android:fontFamily="@font/sf_ui_display_regular"
            android:textSize="17sp"
            android:layout_below="@+id/imvst4"
            android:layout_marginHorizontal="30sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/txtSt4"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:src="@drawable/points4"
            android:layout_alignParentBottom="true"
            />

        <Button
            android:id="@+id/btnGoFirstSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/continuar"
            android:fontFamily="@font/clear_sans_bold"
            android:backgroundTint="@color/appBlue"
            android:layout_below="@+id/txtSt4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>

</FrameLayout>